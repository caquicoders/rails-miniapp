<%= link_to "Criar evento", new_event_path, class: "btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Local</th>
      <th>Data</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event_path(event) %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td><%= event.date.strftime("%d/%m/%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>